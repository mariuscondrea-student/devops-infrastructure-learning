{
  "security_policies": {
    "version": "1.0",
    "last_updated": "2025-08-13",
    "aws_security": {
      "iam_policies": {
        "minimum_password_length": 12,
        "require_mfa": true,
        "password_rotation_days": 90,
        "max_password_age": 90,
        "prevent_password_reuse": 12
      },
      "encryption": {
        "s3_encryption": "AES256",
        "rds_encryption": true,
        "ebs_encryption": true,
        "kms_key_rotation": true
      },
      "network_security": {
        "default_vpc_allowed": false,
        "ssh_port_22_restricted": true,
        "rdp_port_3389_restricted": true,
        "security_groups_ingress_0.0.0.0/0": false
      }
    },
    "terraform_policies": {
      "required_providers": {
        "aws": ">= 4.0",
        "random": ">= 3.0",
        "template": ">= 2.2"
      },
      "state_management": {
        "backend": "s3",
        "encryption": true,
        "versioning": true,
        "access_logging": true
      },
      "resource_tagging": {
        "required_tags": [
          "Environment",
          "Project",
          "Owner",
          "CostCenter"
        ]
      }
    },
    "compliance_frameworks": {
      "supported": [
        "CIS Controls",
        "NIST Framework",
        "SOC 2 Type II",
        "ISO 27001"
      ],
      "audit_requirements": {
        "log_retention_days": 365,
        "access_review_frequency": "quarterly",
        "vulnerability_scan_frequency": "weekly"
      }
    }
  }
}
